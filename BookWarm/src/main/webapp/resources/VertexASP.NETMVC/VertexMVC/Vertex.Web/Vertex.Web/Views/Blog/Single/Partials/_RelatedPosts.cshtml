@model IEnumerable<PostModel>


@if (Model.Count() > 0)
{
    <div class="clearfix my-9">
        <h3 class="h4 mb-3">Related Articles</h3>

        @(Html.Vertex().BlogPosts(BlogPostViewName.ListBottomText)
                       .CustomPosts(Model.Select(s => s.Id))
                       .ToSlider(slider =>
                       {
                           slider.SlidesToShow(2);
                           slider.Dots();
                       }))
    </div>
}