@using Vertex.Web.Framework.Extensions
@using Vertex.Web.Framework.Utilities


@Html.Vertex().Page().Title("Home").Header(settings => {
    settings.Nav = DemoMenu.GetDemoMenu();
    settings.ShowTopbar = false;
    settings.ShowSearchIcon = true;
    settings.StickyType = HeaderStickyType.Shrink;
})


@Html.Vertex().Section().Size(SectionSize.None).AppendCssClass("pt-12 section--dark-bottom-fade overflow-hidden").ContentTemplate(
    @<text>
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-md-12">
                    <h2 class="text-white fs-40">
                        Manage all your projects with ease
                    </h2>
                    <p class="text-white mt-3 mb-8">
                        We help you create and manage all you projects including <br /> team and company wide managements
                    </p>
                    <a href="@Url.Action("Index", "Contact")" class="btn btn-white transition-hover mx-auto overlay-block w-30">
                        Request a Demo
                    </a>

                    <img src="/Content/img/how-it-works.png" data-aos="fade-up" />
                </div>
            </div>
        </div>

        @Html.Vertex().OvalDivider(OvalDividerType.Divider10)

    </text>).AppendStyle("background-color", "#141d2b")



